{
    "name": "tienvx/mbt-bundle",
    "type": "symfony-bundle",
    "description": "Provide tools to test a system using Model Based Testing technique.",
    "keywords": ["model based testing", "testing tools"],
    "license": "MIT",
    "authors": [
        {
          "name": "Tien Xuan Vo",
          "email": "tien.xuan.vo@gmail.com",
          "role": "Developer"
        },
        {
            "name": "Community contributions",
            "homepage": "https://github.com/tienvx/mbt-bundle/contributors"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "ext-json": "*",
        "graphp/algorithms": "~0.8.1",
        "symfony/framework-bundle": "~4.3.1",
        "symfony/console": "~4.3.1",
        "symfony/workflow": "~4.3.1",
        "symfony/validator": "~4.3.1",
        "symfony/messenger": "~4.3.1",
        "symfony/process": "~4.3.1",
        "doctrine/doctrine-bundle": "~1.11.2",
        "doctrine/orm": "~2.6.3",
        "league/flysystem-bundle": "~1.1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~7.5.12",
        "php-coveralls/php-coveralls": "~2.1.0",
        "friendsofphp/php-cs-fixer": "~2.15.1",
        "symfony/yaml": "~4.3.1",
        "symfony/expression-language": "~4.3.1",
        "symfony/security-bundle": "~4.3.1",
        "symfony/maker-bundle": "~1.11.6",
        "tienvx/messenger-memory-transport": "~0.2.0",
        "league/flysystem-memory": "~1.0.2"
    },
    "autoload": {
        "psr-4": {
            "Tienvx\\Bundle\\MbtBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tienvx\\Bundle\\MbtBundle\\Tests\\": "tests/",
            "App\\": "tests/app/src/"
        }
    },
    "scripts": {
        "coverage": "php vendor/bin/phpunit --coverage-clover tests/logs/clover.xml --colors=always",
        "cs-fix": "php vendor/bin/php-cs-fixer fix --dry-run --ansi",
        "coverall": "php vendor/bin/php-coveralls",
        "test": [
            "php tests/app/bin/console cache:clear --env=test --ansi",
            "php vendor/bin/phpunit --colors=always"
        ]
    },
    "conflict": {
        "symfony/symfony": "*",
        "symfony/twig-bundle": "<4.0",
        "symfony/debug": "<4.0"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.7-dev"
        }
    },
    "suggest": {
        "ext-amqp": "Needed to support amqp transport",
        "alek13/slack": "Send bug report to Slack",
        "symfony/swiftmailer-bundle": "Send bug report to an email",
        "symfony/twig-bundle": "Send bug report to an email with html format"
    }
}
